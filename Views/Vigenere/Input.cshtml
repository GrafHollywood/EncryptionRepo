@{
    ViewData["Title"] = "Шифр Виженера";
}

<h1 class="display-4">Шифр Виженера</h1>
<form asp-controller="Vigenere" method="post">
    <p>
        <b>Ключ:</b> <br />
        <input type="text" name="key" required />
    </p>
    <h2>Ввести текст вручную</h2>
    <p>
        <b>Текст, который необходимо зашифровать:</b> <br />
        <textarea name="message" rows="10" cols="100"></textarea>
    </p>
    <input type="submit" value="Зашифровать" asp-action="Encrypt"/>
    <input type="submit" value="Расшифровать" asp-action="Decrypt"/>
</form>